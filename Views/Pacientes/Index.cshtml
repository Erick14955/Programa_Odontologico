@model IEnumerable<Programa_Odontologico.Models.Paciente>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        th{
            font-family: 'Times New Roman';
            font-size: 30px;
            align-self: center;
            text-align: center;
            width: 100%;
        }
        table {
            border-spacing: 20px;
            border-collapse: collapse;
            table-layout: fixed;
            margin: 0 auto;
            border-color: black;
            border-top: black;
        }
        h1{
            font-family: 'Times New Roman';
            text-align: center;
            font-size: 60px;
            color: black;
        }
        td {
            font-family: 'Times New Roman';
            background-position: center;
        }
        p {
            transform: translateY(40%)
        }
    </style>
</head>
<body>
    <h1>Centro Odontologico doctor Lluberes</h1>
    <table border="1" cellpadding="4" cellspacing="3">
        <tr  style="background-color: #90C2E7; text-align: center; font-family: 'Times New Roman';">
            <th colspan="8">
                <h3 style="font-size: 40px;">
                    <br /> Lista de pacientes en espera
                </h3> 
            </th>
        </tr>
        <tr>
            <th style="width: 10%;">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th style="width: 10%;">
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th style="width: 3%;">
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th style="width: 20%;">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th style="width: 12%;">
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th style="width: 16%;">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="width: 10%;">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Pacientes", new { id = item.PacienteId })">
                        <input type="submit" value="Editar"/>
                    </a>
                    <a href="@Url.Action("Details", "Pacientes", new { id = item.PacienteId })">
                        <input type="submit" value="Detalles"/>
                    </a>
                    <a href="@Url.Action("Delete", "Pacientes", new { id = item.PacienteId })">
                        <input type="submit" value="Eliminar"/>
                    </a>
                </td>
            </tr>
        }
    </table>

    <p>
        <a href="@Url.Action("Create", "Pacientes")">
            <input type="submit" value="Nuevo Paciente" class="btn btn-default">
        </a>
    </p>
</body>
</html>
